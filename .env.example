# ================================
# Eroge Translation Tool Configuration
# ================================

# === API Configuration ===
# API link, leave blank to use OpenAI API
# For OpenRouter: https://openrouter.ai/api/v1
# For Ollama: http://localhost:11434/v1
# For Anthropic: https://api.anthropic.com
api=""

# API key - GET YOUR KEY FROM:
# OpenAI: https://platform.openai.com/
# OpenRouter: https://openrouter.ai/
# Anthropic: https://console.anthropic.com/
# Google: https://makersuite.google.com/
key=""

# Organization key (optional for OpenAI, make something up for others)
organization=""

# Provider type (openai, openrouter, anthropic, google, xai, deepseek, ollama)
provider="openai"

# === Model Configuration ===
# Model name - see 'python cli.py models' for full list
# Popular choices:
# OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo, gpt-4o
# Anthropic: claude-3-haiku, claude-3-sonnet, claude-3-opus
# Google: gemini-2.5-flash, gemini-2.5-pro
# xAI: grok-3, grok-3-mini
# DeepSeek: deepseek-v3.1
model="gpt-4"

# === Translation Settings ===
# The language to translate TO
language="English"

# The timeout before disconnect error (30-300 seconds recommended)
timeout="120"

# The number of files to translate at the same time
# (1 recommended for free APIs or rate-limited services)
fileThreads="1"

# The number of threads per file
# (1 recommended for free APIs or rate-limited services)
threads="1"

# === Text Formatting ===
# The wordwrap of dialogue text
width="60"

# The wordwrap of items and help text
listWidth="100"

# The wordwrap of notes text
noteWidth="75"

# === API Cost Settings ===
# Input API cost per 1K tokens (auto-updated when model is selected)
input_cost=0.002

# Output API cost per 1K tokens (auto-updated when model is selected)
output_cost=0.002

# Batch size - adjust according to your API's limitations
batchsize="10"

# Frequency penalty - adjust according to your needs (0.0-2.0)
frequency_penalty=0.2

# === OpenRouter Specific Settings ===
# OpenRouter API URL (if using OpenRouter)
openrouter_url="https://openrouter.ai/api/v1"

# Your site URL (optional, for OpenRouter referrer tracking)
site_url=""

# Your app name (optional, for OpenRouter identification)
app_name="Eroge Translation Tool"

# === Ollama Specific Settings ===
# Ollama API URL (if using Ollama)
ollama_url="http://localhost:11434/v1"

# Ollama model name (e.g., llama3:8b, mistral:7b)
ollama_model="llama3:8b"

# === Advanced Settings ===
# Enable debug logging
debug=false

# Maximum context length to use (leave blank for model default)
max_context=""

# Temperature for generation (0.0-2.0, lower = more deterministic)
temperature="0.3"

# === Backup Settings ===
# Create backup files before translation
create_backup=true

# Backup directory (relative to project root)
backup_dir="backups"